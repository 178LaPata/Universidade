extends layout

block content
  .w3-card-4
  header.w3-container.w3-pink
    h1= title
  .w3-container
    form.w3-container(method="POST")
      fieldset
        legend Metadados
        label ID
        input.w3-input.w3-round(type="text", name="id")
        label Nome
        input.w3-input.w3-round(type="text", name="nome")
        label Git
        input.w3-input.w3-round(type="text", name="gitlink")

      fieldset
        legend TPC
        each n in [1,2,3,4,5,6,7,8]
          input.w3-check(type="checkbox", name="tpc"+n, value="1")
          label  TPC#{n} 

      button.w3-btn.w3-purple.w3-mb-2(type="submit") Register

  footer.w3-container.w3-pink
    address Gerado por EngWeb2024 em #{data}