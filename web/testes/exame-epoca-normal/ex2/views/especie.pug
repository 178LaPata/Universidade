extends layout 

block content
  .w3-card-4
    header.w3-container.w3-teal
        h1
          span Página de Espécie

    .w3-container
        table.w3-table-all
          tr
            th Nome Comum
            th Nome Científico
              tr
                td= especie[0].Especie
                td= especie[0].Nome_Cientifico
    .w3-container
        table.w3-table-all
          tr
            th ID
            th Freguesia
            th Espécie
            th Estado
            th Número de Intervenções
          each esp in especies
              tr
                td 
                  a(href="/" + esp._id)= esp._id
                td= esp.Freguesia
                td
                  a(href="/especies/" + esp.Especie)= esp.Especie
                td= esp.Estado
                td= esp.Nr_Intervencoes
    footer.w3-container.w3-blue
        h5 Generated by EngWeb2024 in #{data}